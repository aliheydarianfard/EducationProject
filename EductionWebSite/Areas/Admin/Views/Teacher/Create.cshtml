
@model Eduction.Service.DTOs.Teacher.TeacherDTO;
@{
 Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
    ViewBag.Title = "ثبت مدرس جدید";
}

<div style="width:100%;margin:10px auto;">
    <i class="fa fa-codepen"> <span>ثبت  مدرسین</span> </i>
    <hr />

    <form id="FormTeacher" asp-controller="Teacher" asp-action="Create" method="post">
        <div class="form-group">
            <label for="FirstName">نام</label>
            <input type="text" asp-for="FirstName" class="form-control" placeholder="نام را وارد کنید">
            <span class="text-danger" asp-validation-for="FirstName"></span>
        </div>
        <div class="form-group">
            <label for="LastName">نام خانوادگی</label>
            <input type="text" asp-for="LastName" class="form-control" placeholder="نام خانوادگی را وارد کنید">
            <span class="text-danger" asp-validation-for="LastName"></span>
        </div>

        <div class="form-group ">
            <label for="Email">پست الکترونیک</label>
            <input type="text" asp-for="Email" class="form-control" placeholder="پست الکترونیک را وارد کنید">
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>
        <div class="form-group ">
            <label for="PhoneNumber">شماره تلفن</label>
            <input type="text" asp-for="PhoneNumber" class="form-control" placeholder="شماره تلفن را وارد کنید">
            <span class="text-danger" asp-validation-for="PhoneNumber"></span>
        </div>
        <div class="form-group ">
            <label for="NationalCode">کد ملی</label>
            <input type="text" asp-for="NationalCode" class="form-control" placeholder="کد ملی وارد کنید">
            <span class="text-danger" asp-validation-for="NationalCode"></span>

        </div>
        <div class="form-group ">
            <label for="LastDegreeOfEducation">آخرین مدرک تحصیلی</label>
            <input type="text" asp-for="LastDegreeOfEducation" class="form-control" placeholder="آخرین مدرک تحصیلی را وارد کنید">
            <span class="text-danger" asp-validation-for="LastDegreeOfEducation"></span>
        </div>
        <div class="form-group ">
            <label for="BirthDay">تاریخ تولد</label>
            <br />
            <persian-date asp-for="BirthDay"></persian-date>
        </div>

        <div class="form-group ">
            <label for="Sex">جنسیت</label>
            <br />
            @if (Model.Sex == 1)
            {
                <span>مرد</span><input type="radio" asp-for="Sex" value="1" checked="checked" id="rdbman" name="rdbsex">


                <span>زن</span><input asp-for="Sex" value="2" style="margin-right:5px;" type="radio" id="rdbwoman" name="rdbsex">
            }
            @if (Model.Sex == 2)
            {
                <span>مرد</span><input type="radio" asp-for="Sex" value="1" id="rdbman" name="rdbsex">


                <span>زن</span><input asp-for="Sex" value="2" style="margin-right:5px;" checked="checked" type="radio" id="rdbwoman" name="rdbsex">
            }

            @if (Model.Sex != 1 && Model.Sex != 2)
            {

                <span>مرد</span><input value=1 type="radio" asp-for="Sex" id="rdbman" checked="checked" name="rdbsex">
                <span>زن</span><input value=2 type="radio" asp-for="Sex" v style="margin-right:5px;" id="rdbwoman" name="rdbsex">
            }




        </div>
        <button onclick="Save()" type="button" class="btn btn-primary">ثبت</button>
    </form>


</div>
@section ViewScript
{
    <script>
        function Save() {
            if (!confirm("آیا عمیات انجام شود؟"))
                return;
            FormTeacher.submit();
        }
    </script>
}