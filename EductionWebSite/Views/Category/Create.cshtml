
@model Eduction.Service.DTOs.Category.CategoryDTO;
@{
    Layout = "~/Views/Shared/_layout.cshtml";
}

<div style="width:100%;margin:10px auto;">
    <i class="fa fa-codepen"> <span>ثبت دسته ها</span> </i>
    <hr />
  
    <form asp-controller="Category" asp-action="Create" method="post">
        <input type="hidden" asp-for="ID" />
        <div class="form-group">
            <label asp-for="Name"></label>
            <input class="form-control" placeholder="نام را وارد کنید" asp-for="Name">
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea class="form-control" placeholder="شرح را وارد کنید" asp-for="Description"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">ثبت</button>
    </form>
</div>
