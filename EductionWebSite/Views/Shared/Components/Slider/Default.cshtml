@model Eduction.Service.DTOs.Slider.SliderItemDTO;
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        @{
            var first = Model.sliders.FirstOrDefault();

            <div class="carousel-item active ">
                <img style="height:500px" class="d-block w-100" src="~/img/banner/@first.Path" alt="First slide">
            </div>

        }
        @foreach (var item in Model.sliders)
        {
            <div class="carousel-item  ">
                <img style="height:500px" class="d-block w-100" src="~/img/banner/@item.Path" alt="First slide">
            </div>
        }

    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>