
@using Eduction.Core.Extension;
@model Eduction.Service.DTOs.Teacher.TeacherListItemDTO;
@{
    Layout = "~/Views/Shared/_layout.cshtml";
}
<!DOCTYPE html>




<div style="width:100%;margin:10px auto;">
    <i class="fa fa-codepen"> <span>مدیریت مدرسین</span> </i>
    <hr />

    <form class="form-inline" asp-controller="Teacher" asp-action="List" method="get">

        <input class="form-control" id="TeacherSearchName" placeholder="جستجو بر اساس نام خانوادگی " asp-for="TeacherSearchName">
        <button type="submit" id="SearchButton" class="btn btn-primary">جستجو</button>
    </form>
    <div style="float:left">

        <a class="btn-link" asp-controller="Teacher" asp-action="Create">ثبت جدید </a>
    </div>
    <table class="table table-bordered table-hover text-center">
        <thead class="bg-primary text-light">

            <tr>
                <td>نام</td>
                <td>نام خانواگی</td>
                <td>شماره تلفن</td>
                <td>کد ملی</td>
                <td>پست الکترونیکی</td>
                <td>آخرین مدرک تحصیلی</td>            
                <td>ویرایش</td>
                <td>حذف</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Teachers)
            {
                

                <tr>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.PhoneNumber</td>
                    <td>@item.NationalCode</td>
                    <td>@item.Email</td>
                    <td>@item.LastDegreeOfEducation</td>
                    <td><a class="btn-link" asp-controller="Teacher" asp-action="Create" asp-route-id="@item.ID">ویرایش</a></td>
                    <td><a class="btn-link" asp-controller="Teacher" asp-action="Remove" asp-route-id="@item.ID">حذف</a></td>

                </tr>
            }
        </tbody>
    </table>

    <div style="margin-right:45%">
        <row>

            <nav aria-label="Page navigation example ">
                <ul class="pagination">
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </row>
    </div>
</div>


<style>
    #TeacherSearchName {
        margin-bottom: 5px;
        margin-left: 5px;
    }

    #SearchButton {
        margin-bottom: 5px
    }
</style>